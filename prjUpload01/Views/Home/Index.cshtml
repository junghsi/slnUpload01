@model IEnumerable<System.IO.FileInfo>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>單一檔案上傳</title>
    <style>
        div{
            width:220px;
            height:170px;
            background-color:beige;
            padding:10px;
            margin:10px;
            text-align:center;
            float:left;
        }
        img{
            width:200px;
            height:150px;
        }
    </style>
</head>
<body>
    <form method="post" action="@Url.Action("Index")"
        enctype="multipart/form-data">
        <p>請選擇上傳的圖檔</p>
        <p><input type="file" name="formFile" /></p>
        <p><input type="submit" value="檔案上傳" /></p>
    </form>

    <hr/>
    @foreach(var item in Model)
    {
        <div>
            <img src="~/Images/@item.Name" /><br />
            @item.Name.Split('.')[0]
        </div>
    }

</body>
</html>
